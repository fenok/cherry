{
    "name": "cherry",
    "description": "React project boilerplate with step-by-step creation history.",
    "repository": {
        "type": "git",
        "url": "https://github.com/fenok/cherry.git"
    },
    "license": "MIT",
    "author": "Leonid Fenko <fenok2112@gmail.com>",
    "packageManager": "yarn@3.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "foreach": "yarn workspaces foreach -p run",
        "format": "prettier --write --ignore-unknown .",
        "pre-commit": "lint-staged",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "husky": "^7.0.1",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2"
    }
}
