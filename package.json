{
    "name": "cherry",
    "description": "React project boilerplate with step-by-step creation history.",
    "repository": {
        "type": "git",
        "url": "https://github.com/fenok/cherry.git"
    },
    "license": "MIT",
    "author": "Leonid Fenko <fenok2112@gmail.com>",
    "packageManager": "yarn@3.0.1-rc.2",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "foreach": "yarn workspaces foreach -p run",
        "format": "prettier --write --ignore-unknown .",
        "lint:es": "eslint .",
        "pre-commit": "lint-staged",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^13.1.0",
        "@linaria/stylelint": "^3.0.0-beta.7",
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.1",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2",
        "stylelint": "^13.13.1",
        "stylelint-config-recommended": "^5.0.0",
        "typescript": "^4.3.5"
    },
    "dependenciesMeta": {
        "core-js": {
            "built": false
        },
        "core-js-pure": {
            "built": false
        },
        "yarn": {
            "built": false
        }
    }
}
